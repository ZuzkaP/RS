<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Scripts/jquery-ui.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Scripts/jquery-ui.structure.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Scripts/jquery-ui.theme.min.css" rel="stylesheet" type="text/css" />
    <link type="text/css" rel="stylesheet" href="~/Scripts/materialize.min.css" media="screen,projection" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="~/Content/Common.js"></script>
</head>
<body>
    <nav class="white z-depth-3 hoverable" role="navigation">
        <div class="nav-wrapper">
            <a href="@Url.Action("Index", "Home")" class="brand-logo">Studio Speranza</a>

            <ul class="right hide-on-med-and-down">
                <li><a href="@Url.Action("Index", "Home")"><i class="material-icons left">dashboard</i>Home</a></li>
                @if (!Request.IsAuthenticated)
                {
                    <li><a href="@Url.Action("Calendar", "Trainings")"><i class="material-icons left">schedule</i>Kalendar</a></li>  
                    <li><a href="@Url.Action("Register", "User")"><i class="material-icons left">supervisor_account</i>Sign Up</a></li>
                    <li><a href="@Url.Action("Login", "Login")"><i class="material-icons left">perm_identity</i>Login</a></li>
                    }
                else
                {
                    if (User.Identity.Name == "admin@admin.sk")
                    {
                        <li><a href="@Url.Action("Maintanance", "User")"><i class="material-icons left">menu</i>Settings</a></li>
                    }
                    <li><a href="@Url.Action("Logout", "Login")"><i class="material-icons left">input</i><strong>(@Html.Encode(User.Identity.Name))</strong> Logout</a></li>
                }
            </ul>

            <ul id="nav-mobile" class="side-nav">
                <li><a href="#"><i class="material-icons left">dashboard</i>Home</a></li>
                @if (!Request.IsAuthenticated)
                {
                    <li><a href="@Url.Action("Register", "User")"><i class="material-icons left">supervisor_account</i>Sign Up</a></li>
                    <li><a href="@Url.Action("Login", "Login")"><i class="material-icons left">perm_identity</i>Login</a></li>
                }
                else
                {
                    if (User.Identity.Name == "admin@admin.sk")
                    {
                        <li><a href="@Url.Action("Maintanance", "User")"><i class="material-icons left">menu</i>Settings</a></li>
                    }
                    <li><a href="@Url.Action("Logout", "Login")"><i class="material-icons left">input</i><strong>(@Html.Encode(User.Identity.Name))</strong> Logout</a></li>
                }
            </ul>
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
    </nav>

    @RenderBody()

    <hr />

    <footer class="page-footer teal">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Reservation system for Studio Speranza</h5>
                    <p class="grey-text text-lighten-4">
                        Studio Speranza provides a reservation system and services.
                    </p>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - Studio Speranza</p>
                <a class="grey-text text-lighten-4 right" href="http://materializecss.com/">Powered by Materialize CSS</a>
            </div>
        </div>
    </footer>
</body>
</html>