@model IEnumerable<RS.Models.Trainings>

<br />

@if (ViewBag.Roles != null)
{
    foreach (RS.Models.UsersRoles ur in ViewBag.Roles)
    {
        if (ur.Roles.name.Equals("trener"))
        {
            <a class="btn-floating btn-large waves-effect waves-light green tooltipped modal-trigger" data-target="createModal" data-tooltip="Pridaj tréning" data-position="right" data-delay="50">
                <i class="material-icons">add</i>
            </a>

            <div id="createModal" class="modal">
                <div class="modal-content">
                    <h4>Vytvor tréning</h4>

                    @using (Html.BeginForm("Create", "Trainings"))
                    {
                        <div class="row">
                            <form class="col s12">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input type="text" id="time" name="time">
                                        <label for="time">Čas tréningu</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <input type="text" id="kapacita" name="kapacita">
                                        <label for="kapacita">Kapacita</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <input class="btn" type="submit" id="submit" name="action">
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    }
}

<div class="container">
    <table class="bordered responsive">
        <thead>
            <tr>
                <th>
                    Čas
                </th>
                <th>
                    Kapacita (obsadené/celkovo)
                </th>
                <th>
                    Tréner
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.kapacita)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Users.first_name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
